/**index.wxss**/

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  color: #fff;
  justify-content: flex-start;
}

.container {
  position: relative;
}

.bcg {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  height: 100vh;
  width: 100%;
}

.search {
  width: 100%;
  height: 90rpx;
  position: fixed;
  top: 0;
}

.search-wrapper {
  height: 60rpx;

  border-bottom: 1rpx solid #fff;
  position: relative;
  margin: 15rpx 30rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.search-wrapper image {
  width: 28rpx;
  height: 28rpx;
  position: absolute;
  left: 0;
  z-index: 4;
}

.search-input {
  flex: 1;
  padding-left: 50rpx;
  color: #fff;
}

.content {
  position: relative;
  margin-top: 60px;
  z-index: 10;
  height: 2000rpx;
}

/* .user-info {
  padding: 0 50rpx;
  height: 60rpx;
} */

.avatar {
  display: block;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  overflow: hidden;
}

.avatarInfo {
  display: flex;
  align-items: center;
  padding: 0 50rpx;
  font-size: 30rpx;
}

.avatarInfo .name {
  margin: 0 20rpx;
}

.avatarInfo .downArrow {
  width: 20rpx;
  height: 20rpx;
}

.info {
  padding: 0 50rpx;
}

.city {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.city-name {
  display: flex;
  align-items: center;
}

.city .downArrow {
  width: 30rpx;
  height: 30rpx;
}

.location {
  font-size: 66rpx;
  margin: 0 20rpx;
}

.city {
  display: flex;
  align-items: center;
}

.time {
  vertical-align: middle;
  font-size: 24rpx;
}

.temp {
  font-size: 200rpx;
  height: 360rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.weather {
  text-align: center;
}

.temp-num {
  font-weight: 300;
}

.opacity {
  margin: 30rpx 0;
  text-align: center;
}

.opacity text {
  border: 1px solid #fff;
  border-radius: 30rpx;
  height: 30rpx;
  background: rgba(255, 255, 255, 0.2);
  font-size: 24rpx;
  padding: 5rpx 10rpx;
}

.item {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  width: 170rpx;
  flex-shrink: 0;
}

.guide {
  background: rgba(0, 0, 0, 0.6);
  font-size: 24rpx;
  margin-bottom: 20rpx;
}

.guide .title,
.hourly .title {
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 24rpx;
  border-bottom: 1px solid rgba(255, 255, 255, 0.4);
}

.guide-content {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-content: flex-start;
  overflow-x: scroll;
}

.guide .i image,
.hour .weather image {
  width: 40rpx;
  margin-left: 4rpx;
}
.item .i {
  padding-bottom: 20rpx;
}

.details {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  background: rgba(0, 0, 0, 0.6);
  margin-bottom: 20rpx;
  font-size: 24rpx;
}

.details .detail,
.hour .detail {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  padding: 10rpx 0;
  height: 100rpx;
  width: 25%;
  border-right: 1rpx solid rgba(250, 250, 250, 0.2);
  border-bottom: 1rpx solid rgba(250, 250, 250, 0.2);
  box-sizing: border-box;
}
.details .detail:nth-child(4n),
.hour .detail:nth-child(4n) {
  border-right: none;
}
.details .detail:nth-child(n + 9),
.hour .detail:nth-child(n + 9) {
  border-bottom: none;
}

.hour {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  background: rgb(107, 102, 102);
  font-size: 24rpx;
  box-sizing: border-box;
  border-radius: 8rpx;
}
.hourly swiper-item {
  box-sizing: border-box;
  padding: 0 10rpx;
  background: rgba(0, 0, 0, 0);
}

.hourly {
  margin-bottom: 20rpx;
}

swiper {
  margin-top: 5rpx;
}

.hourly .title {
  background: rgba(0, 0, 0, 0.6);
}

.livingIndex {
  /* border-bottom: 1rpx solid rgba(240, 240, 240, .4); */
  background: rgba(0, 0, 0, 0.6);
  margin-bottom: 20rpx;
}
.livingIndex .item {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  border-bottom: 1rpx solid rgba(250, 250, 250, 0.2);
  padding: 20rpx 0;
  margin: 0 30rpx;
}
.livingIndex .item:last-child {
  border-bottom: none;
}
.livingIndex .item .right {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
  flex: 1;
}
.livingIndex .item .value {
  margin-top: 10rpx;
  font-size: 24rpx;
}
.livingIndex .icon {
  width: 80rpx;
  height: 80rpx;
  padding: 0 24rpx;
}

.footer {
  text-align: center;
  height: 60rpx;
  font-size: 22rpx;
  color: #fff;
  line-height: 60rpx;
}
